<h1>All Cities</h1>
<div class="container-fluid">
  <div class="page-header">
    <h1 class="margin-b-sm margin-l-md cursor-default">
      Cities
    </h1>
  </div>
  <div class="portlet">
    <div class="portlet-title bg-gray-darker text-white">
      <span class="title">
        <%= "Search" %>
      </span>
    </div>
    <div class="portlet-body">
      <%= render 'search_cities' %>
    </div>
  </div>
<ul>
  <% @cities.each do |city| %>
    <li><%= city.name %> - <%= city.state.name %></li>
  <% end %>
</ul>